@(user: User)(content: Html)
@import profileparts._

@main {
    <div id="profile">
        <div class="user_header">
            <a class="avatar" href="#">
                <img src="@routes.Assets.at(user.userAvatar)"/>
            </a>
            <h2 class="username">
                <a href="@routes.Profile.profile(user.id)">@user.name</a>
            </h2>
            <div class="clear"></div>
        </div>
        <div class="content-left">
            @menu(user)
            @content
        </div>
    </div>
}
