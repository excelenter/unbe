@(users: List[User], cycles: List[Cycle], user: User)

@main {

<article  class="tasks">
    @cycles.groupBy(_.creator).map {
        case (creator, cycles) => {
        <div class="user" user-id="@creator.email">
            <hr/>
            <header>
                <h4>@creator.name</h4>
            </header>
            <ul class="list">
                @cycles.map { cycle =>
                <li data-task-id="@cycle.id">
                    <h4>@cycle.title</h4>
                    <div>@cycle.description</div>
                </li>
                }
            </ul>
            <hr/>
        </div>
        }
    }
</article>

}
