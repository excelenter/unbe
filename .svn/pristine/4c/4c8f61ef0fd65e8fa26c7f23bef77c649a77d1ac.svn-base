@(form: Form[controllers.Cycle.NewCycle])

@main {
    <div class="new-panel">
        @helper.form(routes.Cycle.saveCycle(), 'enctype -> "multipart/form-data") {
        <h1>Новый цикл</h1>
        @if(form.hasGlobalErrors) {
        <p class="error">
            @form.globalError.message
        </p>
        }
        @if(flash.contains("success")) {
        <p class="success">
            @flash.get("success")
        </p>
        }
        <dl>
            <dt></a><label>Название цикла:</label></dt>
            <dd><input type="text" name="title" placeholder="Имя" value=""></dd>

            <dt>Логотип цикла:</dt>
            <dd><input type="file" name="logo" placeholder="Ссылка на логоу" value=""></dd>

            <dt><label>Описание цикла:</label></dt>
            <dd><textarea type="text" name="description" placeholder="Описание цикоа" value="" rows="5" cols="40">

            </textarea></dd>

            <dd><button type="submit">Создать</button></dd>
        </dl>
        }
    </div>
}{
    <div></div>
}