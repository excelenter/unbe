@(news: List[models.Article])
@main {

<div  class="news">
    <div class="news-list">
        @news.map { topic =>
        <div class="topic">
            <h1>
                <a href="@topic.id">
                    <span>@topic.title</span>
                </a>
            </h1>
            <div class="author">
                <a href="@routes.Profile.profile(topic.parentCycle.creator.id)">@topic.parentCycle.creator.name</a>
            </div>
            <div class="publishDate">@topic.publishDate.format("dd MMM yyyy")</div>

            <div class="description">@topic.content</div>
        </div>
        }
    </div>
    <div class="right-bar"></div>
</div>

}
